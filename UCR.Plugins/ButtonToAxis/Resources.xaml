<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:UCR.Views.Controls;assembly=UCR"
                    x:Class="UCR.Plugins.ButtonToAxis.Resources">
    <DataTemplate x:Key="ButtonToAxis">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <controls:DeviceBindingControl Label="Button Input low" DeviceBinding="{Binding InputLow}"/>
                <controls:DeviceBindingControl Label="Button Input high" DeviceBinding="{Binding InputHigh}"/>
            </StackPanel>
            <controls:DeviceBindingControl Grid.Column="1" Label="Button Output" HorizontalContentAlignment="Right" DeviceBinding="{Binding Output}"/>
        </Grid>
    </DataTemplate>
</ResourceDictionary>