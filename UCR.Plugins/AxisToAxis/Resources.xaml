<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:UCR.Views.Controls;assembly=UCR"
                    x:Class="UCR.Plugins.AxisToAxis.Resources">
    <DataTemplate x:Key="AxisToAxis">
        <DockPanel>
            <controls:DeviceBindingControl Label="Axis Input" DockPanel.Dock="Left" DeviceBinding="{Binding InputAxis}"/>
            <controls:DeviceBindingControl Label="Axis Output" DockPanel.Dock="Right" HorizontalContentAlignment="Right" DeviceBinding="{Binding OutputAxis}"/>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>