<UserControl x:Class="UCR.Views.Controls.Plugin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UCR.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300" d:DataContext="{d:DesignData }">
    <Grid x:Name="LayoutRoot"  Background="{x:Static SystemColors.ControlBrush}">

        
        <Grid Margin="5,35,5,5">
            <ContentPresenter            
                Content="{Binding Path=PluginView}">
            </ContentPresenter>
        </Grid>
        <DockPanel Background="{x:Static SystemColors.ControlDarkBrush}" HorizontalAlignment="Left" Height="30" LastChildFill="False" VerticalAlignment="Top" Width="auto">
            <Label Content="{Binding Path=PluginTitle}" VerticalAlignment="Center"/>
        </DockPanel>
    </Grid>
</UserControl>
