<UserControl x:Class="UCR.Views.Controls.DeviceBindingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UCR.Views.Controls"
             xmlns:devices="clr-namespace:UCR.Models.Devices"
             xmlns:viewModels="clr-namespace:UCR.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="300">
    <Border BorderBrush="Black" BorderThickness="1" MaxWidth="200" Margin="0,0,0,5">
        <StackPanel Margin="5">
            <Label x:Name="DeviceBindingLabel" />
            <StackPanel Orientation="Horizontal">
                <ComboBox Margin="0,0,5,0" x:Name="DeviceTypeBox" Width="83" ItemsSource="{Binding Source={viewModels:EnumerationExtension {x:Type devices:DeviceType}}}" DisplayMemberPath="Description" SelectedValue="Joystick" SelectedValuePath="Value"/>
                <ComboBox Width="100" x:Name="DeviceNumberBox" DisplayMemberPath="Name" SelectedValuePath="Value" SelectionChanged="DeviceNumberBox_OnSelected"/>
            </StackPanel>
            <Button Name="BindButton" Margin="0,5">
                Click to enter bind mode
                <Button.ContextMenu>
                    <ContextMenu x:Name="Ddl">
                        <ContextMenu.ItemContainerStyle>
                            <Style TargetType="{x:Type MenuItem}">
                                <Setter Property="MenuItem.Header" Value="{Binding Name}" />
                                <Setter Property="MenuItem.ItemsSource" Value ="{Binding Children}" />
                                <Setter Property="Command" Value="{Binding MenuCommand}"/>
                            </Style>
                        </ContextMenu.ItemContainerStyle>
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>
        </StackPanel>
    </Border>
</UserControl>
