<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:UCR.Views.Controls">
    <DataTemplate x:Key="ButtonToAxis">
        <DockPanel>
            <StackPanel>
                <controls:DeviceBindingControl Label="Button Input low" DockPanel.Dock="Left" DataContext="{Binding Input}"/>
                <controls:DeviceBindingControl Label="Button Input high" DockPanel.Dock="Left" DataContext="{Binding Input}"/>
            </StackPanel>
            <controls:DeviceBindingControl Label="Axis Output" DockPanel.Dock="Right" HorizontalContentAlignment="Right" DataContext="{Binding Output}"/>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>