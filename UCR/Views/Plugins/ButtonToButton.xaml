<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:UCR.Views.Controls">
    <DataTemplate x:Key="ButtonToButton">
        <DockPanel>
            <controls:DeviceBindingControl Label="Button Input" DockPanel.Dock="Left" DeviceBinding="{Binding Input}"/>
            <controls:DeviceBindingControl Label="Button Output" DockPanel.Dock="Right" HorizontalContentAlignment="Right" DeviceBinding="{Binding Output}"/>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>